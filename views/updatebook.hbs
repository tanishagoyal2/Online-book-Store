<div class="container"style="margin-bottom:20px;margin-top:80px;">
    {{#if bookdetails}}
    <form method="POST" action="/updatebook/{{bookdetails._id}}">
        <div class="form-data col-sm-6">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control"value="{{bookdetails.name}}" name="name" id="title" placeholder="Title of book" required>
            </div>
            <div class="form-group">
                <label for="Author">Author</label>
                <input type="text" class="form-control" name="author"value="{{bookdetails.author}}" id="author" placeholder="Author name"required>
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <select id="categoryoptions" name="category" value="{{bookdetails.category}}"  class="form-control"required>
                    {{!-- <option selected>Choose</option> --}}
                    <option value=novels selected>Novel</option>
                    <option value=action>Action</option>
                    <option value=adventure>Adventure</option>
                    <option value=biography>Biography</option>
                    <option value=classics>Classics</option>
                    <option value=crimethriller>Crime and Thriller</option>
                    <option value=fantacy>Fantacy</option>
                    <option value=friction>friction</option>
                    <option value=educational>Education Book</option>
                    <option value=children>Children Books</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Price">Price</label>
                <input type="text" class="form-control"value="{{bookdetails.price}}"  name="price" id="price" placeholder="Enter Price"required>
            </div>
            <div class="form-group">
                <label for="number">ISBN</label>
                <input type="text" class="form-control"value="{{bookdetails.ISBN}}" name="ISBN" id="ISBNnumber" placeholder="Enter ISBN number"required>
            </div>
            <div class="form-group">
                <label for="quantity">Quantity</label>
                <input type="number" class="form-control"value="{{bookdetails.quantity}}"  name="quantity" id="quantity" placeholder="Enter Quantity"required>
            </div>
            <div class="form-group">
                <label for="number">Pages Count</label>
                <input type="text" class="form-control"value="{{bookdetails.count}}" name="count" id="pagescount" placeholder="Number of Pages"required>
            </div>
            <button type="submit" class="btn btn-primary">Update detail</button>
        </div>
    </form>
    {{/if}}
</div>