<input id='username' class='d-none' value='{{username}}'>
<div class="container-fluid"{{#if loggedin}} style="padding-top:80px;"{{else}} style="padding-top:120px;" {{/if}}>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="images/carousel-1.jpeg" alt="Los Angeles" style="width:100%;">
                <div class="carousel-caption text-left">
                    <h3 class="policy-heading">BookWorm</h3>
                    <p>Sell your book</p>
                </div>
            </div>
            <div class="item">
                <img src="images/carousel-2.jpeg" alt="Chicago" style="width:100%;">
                <div class="carousel-caption text-left">
                    <h3 class="policy-heading ">Gain Knowledge From Books</h3>
                    <p>Buy Books</p>
                </div>
            </div>
            <div class="item">
                <img src="images/carousel-3.jpeg" alt="New York" style="width:100%;">
                <div class="carousel-caption text-left">
                    <h3 class="policy-heading">Free Delivery</h3>
                    <a class="btn btn-primary" href="/contact">Contact Us</a>
                </div>
            </div>
        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            {{!-- <span class="glyphicon glyphicon-chevron-left"></span> --}}
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            {{!-- <span class="glyphicon glyphicon-chevron-right"></span> --}}
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="center container-fluid">
    <div class="col-sm-12 policy">
        <div class="col-sm-3">
            <img class="customer" src="images/truck.png" />
            <h4 class="policy-data">Free Delivery</h4>
        </div>
        <div class="col-sm-3">
            <i class="customer money fa fa-clock-o" aria-hidden="true" style="color:red;font-size:60px"></i>
            <h4 class="policy-data">Return Policy</h4>
        </div>
        <div class="col-sm-3">
            <img class="customer" src="images/running.png" />
            <h4 class="policy-data">Fast Delivery</h4>
        </div>
        <div class="col-sm-3">
            <i class="fa fa-money" style="font-size:70px;color:burlywood"></i>
            <h4 class="policy-data">Cash on Delivery</h4>
        </div>
    </div>
</div>
<div class="book-content" style="padding: 0px 170px 20px 170px;">
    <div class="row">
        {{#each data}}
        <div class="col-sm-3">
            <div class="card" style="width:230px;height:345px">
                <img style="width:228px;height:230px" src="{{this.imagepath}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h6 class="book-name">{{this.name}}</h6>
                    <span>
                        <p class="para"><span style="color:grey">price: </span>&#8377;{{this.price}}<br>
                            <button class="cartbtn btn store"value="{{this._id}}">Add to Cart</button><a class="details" href="details/{{this._id}}">Details</a></p>
                    </span>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<div class="component container-fluid">
    <div class="col-sm-12 customer-data">
        <div class="col-sm-3">
            <img class="customer" src="images/buy.jpeg" />
            <h4 class="content">Buy Your Books</h4>
            <p>Lorem ipsum dolor sit amet</p>
        </div>
        <div class="col-sm-3">
            <img class="customer" src="images/sell.jpeg" />
            <h4 class="content">Sell Your Books</h4>
            <p>Lorem ipsum dolor sit amet</p>
        </div>
        <div class="col-sm-3">
            <img class="customer" src="images/guarantee.jpeg" />
            <h4 class="content">High Quality</h4>
            <p>Lorem ipsum dolor sit amet</p>
        </div>
        <div class="col-sm-3">
            <img class="customer" src="images/customer.jpg" alt="customer-support" />
            <h4 class="content">customer Support</h4>
            <p>Lorem ipsum dolor sit amet</p>
        </div>
    </div>
</div>